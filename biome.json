{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "files": {
    "include": ["apps", "packages"],
    "ignore": [
      "node_modules",
      "dist",
      ".turbo",
      "coverage",
      ".next"
    ]
  },
  "vcs": {
    "kind": "git"
  }
}
