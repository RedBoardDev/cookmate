{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "@cookmate/i18n#compile"],
      "outputs": ["dist/**", "build/**", ".next/**"]
    },
    "dev": {
      "cache": false,
      "dependsOn": ["@cookmate/i18n#compile"]
    },
    "lint": {
      "outputs": []
    },
    "format": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["^test"],
      "outputs": ["coverage/**"]
    },
    "clean": {
      "cache": false
    },
    "extract": {
      "cache": false,
      "outputs": ["locales/**/*.po"]
    },
    "compile": {
      "inputs": ["locales/**/*.po", "lingui.config.ts"],
      "outputs": ["locales/**/*.mjs"]
    }
  }
}
